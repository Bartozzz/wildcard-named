{
  "parser": "babel-eslint",

  "extends": ["standard", "prettier"],
  "plugins": ["flowtype", "standard", "prettier"],

  "env": {
    "es6": true
  },

  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },

  "rules": {
    "no-console": [0],
    "no-param-reassign": [0],
    "no-else-return": [0],
    "no-confusing-arrow": [0],
    "no-prototype-builtins": [0],
    "no-useless-escape": [0],
    "prefer-regex-literals": [0],

    "prettier/prettier": [2],
    "flowtype/define-flow-type": 1
  }
}
